@{
    ViewData["Title"] = "Home Page";
}
@using System.Security.Cryptography.X509Certificates
@model SampleCoreMVCWebsite.Models.UserInputModel 
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h5>Fill in your Details</h5>
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                <dl class="form-group-lg">
                    <dt>
                        @Html.DisplayNameFor(m => m.Salutation)
                    </dt>
                    <dd>
                        @Html.TextBoxFor(m => m.Salutation, "", new {@class = "form-control"})
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(m => m.FirstName)
                    </dt>
                    <dd>
                        @Html.TextBoxFor(m => m.FirstName, "", new {@class = "form-control"})
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(m => m.LastName)
                    </dt>
                    <dd>
                        @Html.TextBoxFor(m => m.LastName, "", new {@class = "form-control"})
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(m => m.EmailAddress)
                    </dt>
                    <dd>
                        @Html.TextBoxFor(m => m.EmailAddress, "", new {@class = "form-control"})
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(m => m.TagLine)
                    </dt>
                    <dd>
                        @Html.TextBoxFor(m => m.TagLine, "", new {@class = "form-control"})
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(m => m.Profile)
                    </dt>
                    <dd>
                        @Html.TextAreaFor(m => m.Profile, 20, 40, new {@class = "form-control"})
                    </dd>
                </dl>
                <input type="submit" value="Submit" class="btn btn-group-lg btn-success"/>
            }

        </div>
      
      
    </div>
</div>
